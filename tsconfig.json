{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "importHelpers": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "target": "es5",
    "watch": false,
    "alwaysStrict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es5", "es6", "dom"],
    "downlevelIteration": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "lib",
    "baseUrl": "./",
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
